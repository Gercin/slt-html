include ./button-icon

mixin about-slider 
  .container
    .about-page__slider
      .about-page__slider-top
      .about-page__slider-desktop
        .swiper-container.swiper-container--visible.swiper-container--visible.swiper-container--slide-width-auto.swiper-container--slide-height-max(data-slider-id='21' data-slider-prev='22' data-slider-next='23')
          .swiper-wrapper 
            - for (i = 0; i < 6; i++)
              .swiper-slide 
                .about-page__slider-slide 
                  img.about-page__slider-img(src=`assets/images/about-slide-${i+1}.webp`, alt="")
      .about-page__slider-mobile 
        .swiper-container.swiper-container--visible.swiper-container--visible.swiper-container--slide-width-auto.swiper-container--slide-height-max(data-slider-id='3' data-slider-prev='22' data-slider-next='23')
          .swiper-wrapper 
            - for (i = 0; i < 6; i++)
              .swiper-slide 
                .about-page__slider-slide 
                  img.about-page__slider-img(src=`assets/images/about-slide-${i+1}.webp`, alt="")

mixin about-bot 
  .about-bot 
    .about-bot__item 
      a.about-bot__card(href="#")
        .about-bot__container 
          h4.about-bot__title
            |Производство
          .about-bot__button 
            +button-icon.button-icon--blue
          .about-bot__count 
            |1
        .about-bot__bg 
          img.about-bot__img(src="assets/images/production.jpg", alt="")
      a.about-bot__card(href="#")
        .about-bot__container 
          h4.about-bot__title
            |Работа у нас
          .about-bot__button 
            +button-icon.button-icon--blue
          .about-bot__count 
            |2
        .about-bot__bg 
          img.about-bot__img(src="assets/images/production.jpg", alt="")
    .about-bot__item
      a.about-bot__line(href="#")
        .about-bot__container 
          h4.about-bot__title
            |Производство
          .about-bot__button 
            +button-icon.button-icon--blue
          .about-bot__count 
            |3
        .about-bot__bg 
          img.about-bot__img(src="assets/images/production.jpg", alt="")