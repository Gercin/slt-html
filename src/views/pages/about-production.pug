extends ../layouts/master

include ../components/breadcrumbs
include ../components/button-icon
include ../components/about-comp


block variables 
  -
    var isDefault = true

block content
  .about-page 
    section.section.section--first
      .container 
        +breadcrumbs(items = ['о компании'] page = "СЛТ Аква")
    section.section.section--md 
      .container 
        ul.about-page__nav
          each item, i in ['СЛТ Аква', 'Производство', 'Работа у нас']
            li.about-page__nav-item 
              a.about-page__nav-link(href="#" class=(i === 0 ? 'active' : '')) 
                |#{item}
    section.section 
      .container  
        .about-page__intro 
          .about-page__intro-row 
            .about-page__intro-col
              .about-page__intro-title 
                |Производство
            .about-page__intro-col
              p.about-page__intro-text 
                |Наши мощности позволяют выпускать более 11 000 тонн готовой продукции в год. Мы используем сырье крупнейшего российского нефтехимического холдинга СИБУР.
          .about-page__intro-image 
            img(src="assets/images/about-production.jpg", alt="")
            +about-logo-svg.about-page__intro-svg
    section.section 
      .container 
        h1.about-page__title
          |Миссия и ценности
        .about-page__section 
          .about-page__section-row 
            .about-page__section-col 
              h5.about-page__label 
                |Наша миссия
            .about-page__section-col
              h2.about-page__stats-title 
                |Наш завод расположен #[br] в индустриальном парке «Тольяттисинтез»
              .about-page__stats 
                .about-page__stats-col
                  .about-page__stats-number
                    |8100
                    span.about-page__stats-span
                      |м2
                  .about-page__stats-caption 
                    |Общая площадь завода
                .about-page__stats-col
                  .about-page__stats-number
                    |700+
                  .about-page__stats-caption 
                    |Товарных позиций
              .about-page__stats-row 
                .about-page__stats-item 
                  h2.about-page__stats-digit 
                    |23 760
                    span.about-page__stats-span 
                      |км
                  .about-page__stats-caption 
                    |Труб в год 
                .about-page__stats-item 
                  h2.about-page__stats-digit 
                    |10 143 392
                    span.about-page__stats-span 
                      |шт
                  .about-page__stats-caption 
                    |Фитингов в год 
    section.section 
      |QWESLIDER
    section.section 
      .container 
        .about-page__section 
          .about-page__section-row 
            .about-page__section-col 
              h5.about-page__label 
                |Наши принципы
            .about-page__section-col
              ul.about-page__list 
                each item in ['Ценить каждого клиента и выстраивать с ним долгосрочные доверительные отношения', 'Ставить перед собой амбициозные цели, реализовывать их и поднимать планку еще выше', 'Взаимодействовать с коллегами эффективно', 'Стремиться создавать новое', 'Безопасность превыше всего']
                  li.about-page__list-item 
                    h4
                      |#{item}
    section.section.section--big 
      +about-bot
